<Window x:Name="mainForm" x:Class="DataBaseManagementSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBaseManagementSystem"
        mc:Ignorable="d"
        Title="Data Base Management System" Height="350" Width="640" ResizeMode="NoResize">
    <Grid Margin="0,0,2,0">
        <DataGrid x:Name="mainDataGrid" HorizontalAlignment="Left" Height="190" Margin="0,129,0,0" VerticalAlignment="Top" Width="630"/>
        <ComboBox x:Name="tablesList" HorizontalAlignment="Left" Margin="10,102,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="tablesList_SelectionChanged"/>

    </Grid>
</Window>
